# Database Configuration
DATABASE_URL=sqlite:///./songs.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/writers_block

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=true

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]

# AI/ML Configuration
OPENAI_API_KEY=your_openai_api_key_here
ENABLE_AI_FEATURES=true

# Audio Processing
MAX_AUDIO_FILE_SIZE=52428800  # 50MB in bytes
SUPPORTED_AUDIO_FORMATS=["mp3", "wav", "ogg", "flac"]

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379
ENABLE_REDIS=false

# JWT Configuration (optional, for authentication)
JWT_SECRET_KEY=your_super_secret_key_change_this_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
