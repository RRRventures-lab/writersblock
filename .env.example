# Event Trading System - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it contains secrets)

# ============================================================================
# API KEYS & CREDENTIALS
# ============================================================================

# Market Data APIs
POLYGON_API_KEY=your_polygon_api_key_here
PERPLEXITY_API_KEY=your_perplexity_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Database & Storage
SUPABASE_URL=your_supabase_url_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_KEY=your_supabase_service_key_here
SUPABASE_DB_URL=your_supabase_db_url_here
DATABASE_URL=your_database_url_here

# Exchange APIs
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_API_SECRET=your_coinbase_api_secret_here

BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_api_secret_here

KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_API_SECRET=your_kraken_api_secret_here

HYPERLIQUID_API_KEY=your_hyperliquid_api_key_here
HYPERLIQUID_API_SECRET=your_hyperliquid_api_secret_here

# ============================================================================
# DEVELOPMENT & MONITORING
# ============================================================================

# GitHub (optional)
GITHUB_TOKEN=your_github_token_here

# Redis (caching & pub/sub)
REDIS_URL=redis://localhost:6379

# Slack (alerts)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# Sentry (error tracking)
SENTRY_DSN=your_sentry_dsn_here

# MLflow (experiment tracking)
MLFLOW_TRACKING_URI=http://localhost:5000

# Weights & Biases (ML tracking)
WANDB_API_KEY=your_wandb_api_key_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Environment
ENVIRONMENT=development  # development, paper_trading, live

# Capital Configuration
INITIAL_CAPITAL=50000        # Starting capital in USD
MAX_POSITION_SIZE=0.10       # Max position as % of portfolio
MAX_SECTOR_CONCENTRATION=0.30
MAX_LEVERAGE=2.0

# Risk Management
DAILY_LOSS_LIMIT=-0.03       # Stop trading if down 3% in a day
MONTHLY_LOSS_LIMIT=-0.10     # Full review if down 10% in a month
MAX_DRAWDOWN_ALLOWED=0.15    # Maximum portfolio drawdown

# Performance Targets
TARGET_ANNUAL_RETURN=0.25    # 25% annual return target
TARGET_SHARPE_RATIO=1.5      # Target Sharpe ratio
TARGET_MAX_DRAWDOWN=0.15     # Target maximum drawdown
TARGET_WIN_RATE=0.55         # Target win rate >55%

# Latency Targets
EVENT_PROCESSING_LATENCY_MS=5000   # 5 seconds max
DECISION_LATENCY_MS=2000           # 2 seconds max
EXECUTION_LATENCY_MS=500           # 500ms max

# ============================================================================
# TAX CONFIGURATION
# ============================================================================

# Tax Rates (2024-2025)
SHORT_TERM_TAX_RATE=0.37          # Maximum federal rate for STCG
LONG_TERM_TAX_RATE=0.20           # Federal rate for LTCG (high earners)
NIIT_RATE=0.038                   # Net Investment Income Tax
SECTION_1256_BLENDED_RATE=0.268   # 60/40 long/short blend

# Tax Planning
LTCG_HOLDING_PERIOD_DAYS=365      # Days required for LTCG classification
WASH_SALE_WINDOW_DAYS=61          # Total window: 30 before + 30 after + sale day
TAX_LOSS_HARVEST_THRESHOLD=1000   # Minimum loss to harvest ($)

# Marginal Tax Bracket (update based on your situation)
MARGINAL_TAX_BRACKET=0.37         # Your marginal tax rate (federal)
STATE_TAX_RATE=0.05               # Your state income tax rate (estimate)

# Entity Configuration
ENTITY_TYPE=LLC                # Entity structure (LLC, C-Corp, S-Corp)
TAX_ELECTION=pass_through      # Tax election (pass_through, s_corp, c_corp)
MARK_TO_MARKET_ELECTION=false  # IRC 475(f) election (for traders)

# ============================================================================
# LOGGING & MONITORING
# ============================================================================

# Logging
LOG_LEVEL=INFO            # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE=logs/trading.log
LOG_MAX_SIZE_MB=100

# Superthink Code Analysis
SUPERTHINK_ENABLED=true
SUPERTHINK_AUTO_FIX=true
SUPERTHINK_REAL_TIME=true
SUPERTHINK_CHECKPOINT_DAY=Sunday

# ============================================================================
# OPTIONAL: FEATURE FLAGS
# ============================================================================

# Trading Features
ENABLE_CRYPTO_TRADING=true
ENABLE_EQUITY_TRADING=true
ENABLE_OPTIONS_TRADING=true
ENABLE_FUTURES_TRADING=false

# Optimization Features
ENABLE_TAX_LOSS_HARVESTING=true
ENABLE_LTCG_PREFERENCING=true
ENABLE_WASH_SALE_PREVENTION=true
ENABLE_PORTFOLIO_REBALANCING=true

# Agent Features
ENABLE_LEGAL_AGENT=true
ENABLE_BUSINESS_AGENT=true
ENABLE_QUANT_AGENT=true
ENABLE_PROMPT_OPTIMIZER=true

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env file to git (add to .gitignore)
# 2. Use strong, unique API keys and secrets
# 3. Rotate API keys every 90 days
# 4. Use minimal permissions for each API key
# 5. Store sensitive data in environment variables, not code
# 6. For production, use a secure secrets manager (AWS Secrets, Vault, etc)
# 7. Keep .env.example updated but without actual values
